void escolherclasse(){
	printf("Agora voce deve escolher uma classe: ");
	printf("\n");
	printf("1.Barbaro\n2.Bardo\n3.Clerigo\n4.Druida\n5.Guerreiro\n6.Ladino\n7.Mago");
	printf("\n\n");
} 
/*Função para escolher uma classe*/


void processo() {
	printf("Processando.");
	Sleep(1000);
	printf(".");
	Sleep(1000);
	printf(".");
	Sleep(1000);
	printf(".");
	Sleep(1000);
	printf(".");
	Sleep(1000);
	printf(".");
	Sleep(100);
}
/*Função para dar "processando..."*/


void pular1linha() {
	printf("\n");
}
/*Função para pular uma linha (preguiça de por \n nos printf*/


void pular2linhas() {
	printf("\n\n");
}
/*Função para pular duas linhas*/


void delay1() {
	Sleep(1000);
}
/*Função para dar um delay de 1s*/


void delay2() {
	Sleep(2000);
}
